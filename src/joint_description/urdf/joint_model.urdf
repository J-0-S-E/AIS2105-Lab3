<?xml version="1.0"?>
<robot name="joint_model">

  <!-- ==== LINKS ==== -->
  <!-- World -->
  <link name="world"/>

  <!-- Base -->
  <link name="base_link">
      <visual>
        <geometry>
          <box size="0.01 0.01 0.01"/>
        </geometry>
        <material name="gray">
          <color rgba="0.5 0.5 0.5 1"/>
        </material>
      </visual>
  </link>

  <!-- Stator -->
  <link name="stator_link">
    <visual>
      <geometry>
        <box size="0.102 0.102 0.102"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- Rotor -->
  <link name="rotor_link">
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.025"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- Angle indicator -->
  <link name="angle_link">
    <visual>
      <geometry>
        <box size="0.025 0.005 0.005"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
  </link>

  <!-- ==== JOINTS ==== -->

  <!-- World til Base -->
  <joint name="base_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Base til Stator -->
  <joint name="stator_joint" type="fixed">
    <parent link="base_link"/>
    <child link="stator_link"/>
    <origin xyz="0 0 0.051" rpy="0 0 0"/>
  </joint>

  <!-- Stator til Rotor -->
  <joint name="angle_joint" type="revolute">
    <parent link="stator_link"/>
    <child link="rotor_link"/>
    <origin xyz="0 0 0.056" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.1416" upper="3.1416" effort="1" velocity="1"/>
  </joint>

  <!-- Rotor til Indicator -->
  <joint name="indicator" type="fixed">
    <parent link="rotor_link"/>
    <child link="angle_link"/>
    <origin xyz="0.0125 0 0.006" rpy="0 0 0"/>
  </joint>

</robot>
